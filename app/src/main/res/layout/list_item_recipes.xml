<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Base.Theme.AppCompat.Light.DarkActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/list_recipes_imageView"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Recipe Name"
            android:id="@+id/list_recipes_recipename_textView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/list_recipes_imageView"
            android:layout_toEndOf="@+id/list_recipes_imageView"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/recipes_ingredients"
            android:id="@+id/list_recipes_ingredients_textView"
            android:layout_below="@+id/list_recipes_imageView"
            android:layout_toRightOf="@+id/list_recipes_imageView"
            android:layout_toEndOf="@+id/list_recipes_imageView"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/list_recipes_ingredientslist"
            android:layout_below="@+id/list_recipes_ingredients_textView"
            android:layout_toRightOf="@+id/list_recipes_imageView"
            android:layout_toEndOf="@+id/list_recipes_imageView"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</LinearLayout>